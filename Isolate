options system: false, cleanup: false

gem 'bundler', '~> 1.15.0'
gem 'i18n', '~> 0.8.0'
gem 'rack-test', '~> 0.6.2'
gem 'mail', '~> 2.6.0'

case ENV['RAILS']
when '5.0'
  version = '~> 5.0.0'
  gem 'actionpack', version
  gem 'actionmailer', version
  gem 'railties', version
when '5.1'
  version = '~> 5.1.0'
  gem 'actionpack', version
  gem 'actionmailer', version
  gem 'railties', version
else
  raise "Unrecognized Rails version: #{ENV['RAILS']}"
end
